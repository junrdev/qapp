<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".filtercontent"
    android:background="#D8D1D1"
    >

<!--    page title -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/title_layout"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/filtercontent_title"
            android:text="Filter the Questions"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_margin="10dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:padding="5dp"
            android:src="@drawable/filter_24"
            />

    </LinearLayout>

<!--    difficulty check boxes-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/title_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/difficultyselect"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:elevation="18dp"
            android:backgroundTint="#2F313E"
            android:padding="5dp"
            android:layout_margin="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/chkeasy"
                    android:textDirection="rtl"
                    android:layout_width="30dp"
                    android:textSize="10sp"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/chckboxeasy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Easy"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

<!--      medium-->
        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:elevation="18dp"
            android:backgroundTint="#144C29"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/chkmid"
                    android:textDirection="rtl"
                    android:layout_width="30dp"
                    android:textSize="10sp"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/chckboxmid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Medium"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="18dp"
            android:elevation="18dp"
            android:backgroundTint="#972A50"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/chkhard"
                    android:textDirection="rtl"
                    android:layout_width="30dp"
                    android:textSize="10sp"
                    android:layout_height="match_parent"
                    android:buttonTint="@color/white"
                    android:textColor="@color/white"
                    />
                <TextView
                    android:id="@+id/chckboxhard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Hard"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center"
                    android:paddingEnd="10dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

<!--    content filters/tags-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/difficultyselect"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclerview_contentfilters"
        android:scrollbars="vertical"
        android:padding="5dp"
        android:layout_centerInParent="true"
        tools:listitem="@layout/contentview"
        >

    </androidx.recyclerview.widget.RecyclerView>


    <Button
        android:layout_below="@+id/recyclerview_contentfilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Generate"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>